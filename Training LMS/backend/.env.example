# 数据库配置
DATABASE_URL=sqlite:///./invoice_audit.db

# 应用配置
APP_NAME=发票审核系统
APP_VERSION=2.0.0
DEBUG=False  # 生产环境设为False

# ═══════════════════════════════════════════════════════════════
# JWT认证配置 ⭐ 生产必须修改
# ═══════════════════════════════════════════════════════════════

# ⚠️ 生产环境必须修改为强随机密钥!
# 生成命令: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-immediately

# Token过期时间(分钟) - 默认7天
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# 跨域配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ═══════════════════════════════════════════════════════════════
# OCR配置
# ═══════════════════════════════════════════════════════════════

# ─── 主OCR提供商选择 ───
# 可选值：baidu（推荐）| tencent | aliyun
OCR_PROVIDER=baidu

# ─── 备用OCR提供商（容灾切换）───
# 留空表示不启用备用，推荐配置：主用baidu，备用tencent
OCR_FALLBACK_PROVIDER=

# ═══ 百度智能云 OCR配置 ═══
# 获取方式：https://console.bce.baidu.com/ai/#/ai/ocr/overview/index
BAIDU_OCR_API_KEY=your_baidu_api_key_here
BAIDU_OCR_SECRET_KEY=your_baidu_secret_key_here

# ═══ 腾讯云 OCR配置 ═══
# 获取方式：https://console.cloud.tencent.com/cam/capi
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_REGION=ap-beijing

# ═══ 阿里云 OCR配置（预留）═══
ALIYUN_ACCESS_KEY=your_aliyun_access_key_here
ALIYUN_ACCESS_SECRET=your_aliyun_access_secret_here
ALIYUN_REGION=cn-shanghai
