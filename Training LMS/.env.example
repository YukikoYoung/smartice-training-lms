# SmartIce LMS 环境变量配置示例
# 复制此文件为 .env 并修改配置值

# ========== 数据库配置 ==========
DB_USER=smartice
DB_PASSWORD=smartice123
DB_NAME=training_lms
DB_PORT=5432

# ========== JWT安全配置 ==========
# 生产环境务必修改为随机密钥！
# 生成方法: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_this_to_a_random_secret_key_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========== 应用配置 ==========
APP_NAME=SmartIce LMS
APP_VERSION=1.0.0
DEBUG=false

# ========== 端口配置 ==========
BACKEND_PORT=8000
FRONTEND_PORT=80

# ========== CORS配置 ==========
# 生产环境请修改为实际域名
CORS_ORIGINS=http://localhost,http://localhost:80,https://your-domain.com

# ========== 其他配置 ==========
# 时区
TZ=Asia/Shanghai
